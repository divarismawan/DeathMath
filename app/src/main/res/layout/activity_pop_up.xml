<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="c.google.deathmath.PopUpActivity"
    >
    <ImageView
        android:id="@+id/champion"
        android:paddingTop="34dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/champion2"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_header"
        />
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score is Down Here Bud!"
        android:layout_above="@+id/tv_score_pop"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:fontFamily="serif"
        />
    <TextView
        android:id="@+id/tv_score_pop"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Home"
        android:textColor="#fff"
        android:textSize="14sp"
        android:background="@drawable/background_pop"/>
    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="retry"
        android:textSize="14sp"
        android:textColor="#fff"
        android:background="@drawable/background_pop"
        />


</RelativeLayout>
