<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="c.google.deathmath.GameActivity"
    android:orientation="vertical"
    android:background="@drawable/calculator">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="30dp">

        <TextView
            android:textColor="#ffffff"
            android:id="@+id/tv_point"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Point :0"
            android:textSize="20sp" />
        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Time : "
            android:textSize="20sp"
            />
        <TextView
            android:textColor="#ffffff"
            android:id="@+id/tv_timer"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#fff"

        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_pointA"
            android:gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"/>
        <TextView
            android:id="@+id/tv_math"
            android:gravity="fill_vertical"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textSize="50sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/tv_pointB"
            android:gravity="center_horizontal"
            android:layout_width="95dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textSize="50sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#fff"
        android:background="#21ffffff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp">
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_seven"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:background="#24ffffff"
            android:text="7"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_eight"
            android:background="#24ffffff"
            android:layout_margin="1dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_nine"
            android:background="#24ffffff"
            android:layout_margin="1dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#ff9600"
            android:gravity="center"
            android:text="+/-"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp">
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_four"
            android:background="#24ffffff"
            android:layout_margin="1dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_five"
            android:background="#24ffffff"
            android:layout_margin="1dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_six"
            android:background="#24ffffff"
            android:layout_margin="1dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_reset"
            android:background="#ff9600"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="PASS"/>
        <!--<Button-->
            <!--android:background="#24ffffff"-->
            <!--android:layout_margin="2dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:text="DELETE"/>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp">
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_one"
            android:background="#24ffffff"
            android:layout_margin="1dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_two"
            android:background="#24ffffff"
            android:layout_margin="1dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_three"
            android:background="#24ffffff"
            android:layout_margin="1dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="20sp"/>
        <Button
            android:textColor="#fff"
            android:id="@+id/btn_del"
            android:background="#ff9600"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="DELETE"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <Button
            android:textColor="#fff"
            android:id="@+id/btn_zero"
            android:layout_width="185dp"
            android:layout_height="80dp"
            android:layout_margin="1dp"
            android:background="#24ffffff"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#ff9600"
            android:text="SUBMIT" />
    </LinearLayout>
</LinearLayout>
